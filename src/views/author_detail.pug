extends layout
block content

    h1 Author: #{author.get('name')}
    p #{author.get('date_of_birth')} - #{author.get('date_of_death')}

    div(style='margin-left:20px;margin-top:20px;')
        
        h2(style='font-size: 1.5rem;') Books
        if author_books.length
            dl
                each book in author_books
                    dt
                        a(href=book.get('url')) #{book.get('title')}
                    if book.get('summary')
                        dd #{book.get('summary')}
                    else
                        dd No summary
        else
            p This author has no books.
    hr
    p
        a(href=`${author.get('url')}/delete`) Delete author
    p
        a(href=`${author.get('url')}/update`) Update author