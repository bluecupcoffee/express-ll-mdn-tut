extend layout
block content
    h1= title

    if author_list.length
        ul
            each author in author_list
                li
                    a(href=author.get('url')) #{author.get('name')}
                    |   ( 
                    b Born: 
                    | #{author.get('date_of_birth_formatted')} - 
                    b Death: 
                    | #{author.get('date_of_death_formatted')} )

    else
        p There are no authors